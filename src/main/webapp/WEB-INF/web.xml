<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <!-- UI -->
  <servlet>
    <servlet-name>poubatal</servlet-name>
    <jsp-file>/poubatal.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>poubatal</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!-- API -->
  <servlet>
    <servlet-name>API</servlet-name>
    <servlet-class>fr.univnantes.atal.poubatal.servlets.API</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>API</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>

  <!-- CRON -->
  <servlet>
    <servlet-name>CRON</servlet-name>
    <servlet-class>fr.univnantes.atal.poubatal.servlets.CRON</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CRON</servlet-name>
    <url-pattern>/cron/*</url-pattern>
  </servlet-mapping>
  
  <!-- Securing URLs -->
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/cron/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
</web-app>
